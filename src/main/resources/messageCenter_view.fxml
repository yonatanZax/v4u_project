<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MessageCenterView">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label prefHeight="40.0" prefWidth="250.0" text="Message Center" underline="true">
                    <font>
                        <Font size="29.0" />
                    </font>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
                <TableView fx:id="messageCenter_tableList" prefHeight="320.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="messageType_col" prefWidth="116.0" text="Message type" />
                        <TableColumn fx:id="info_col" prefWidth="372.0" text="Info" />
                    </columns>
                </TableView>
                <HBox prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#refresh" prefHeight="51.0" prefWidth="71.0" text="Refresh">
                            <HBox.margin>
                                <Insets left="10.0" top="5.0" />
                            </HBox.margin></Button>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#viewConversations" text="View Conversations History">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets left="365.0" top="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin></HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
