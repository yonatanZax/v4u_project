<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.VacationSearchView">
   <center>
      <TableView fx:id="vacations_tableview" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="originColumn" text="Origin" />
            <TableColumn fx:id="destinationColumn" prefWidth="90.0" text="Destination" />
         </columns>
          <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <GridPane hgap="8.0" vgap="8.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
          <HBox id="HBox" alignment="CENTER" spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
              <children>
                  <Label text="Destination:">
                  <HBox.margin>
                     <Insets top="4.0" />
                  </HBox.margin></Label>
                  <TextField fx:id="destinationField" prefWidth="-1.0" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets top="4.0" />
                  </HBox.margin></TextField>
              </children>
          </HBox>
          <HBox id="HBox" alignment="CENTER" spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
              <children>
                  <Label text="Origin:" />
                  <TextField fx:id="originField" prefHeight="31.0" prefWidth="211.0" HBox.hgrow="ALWAYS" />
              </children>
          </HBox>
          <HBox id="HBox" alignment="CENTER" spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
              <children>
                  <Label text="Max Price:" />
                  <TextField fx:id="maxPriceField" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
              </children>
          </HBox>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>

      </GridPane>
   </top>
   <left>
   </left>
</BorderPane>
